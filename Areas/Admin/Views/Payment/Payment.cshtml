@model  List<Jewelly.Models.Payment>
@{
    ViewBag.Title = "Payment";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}
<div>

    <div class="row">
        <div class="col-md-6">
            <div class="chart_">
                <canvas id="order" height="400" width="600"></canvas>
            </div>
        </div>
        <div class="col-md-6">
            <div class="chart_">
                <canvas id="total" height="400" width="600"></canvas>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="chart_">
                <canvas id="profit" height="400" width="600"></canvas>
            </div>
        </div>
        <div class="col-md-6">
            <div class="chart_">
                <canvas id="country" height="400" width="600"></canvas>
            </div>
        </div>
    </div>
    <div class="row">
        @if (ViewBag.SuccessMg != null)
        {
            <div id="msgAlert" style="margin-left: 3em;" class="alert alert-success">
                @ViewBag.SuccessMg
            </div>
        }
        else if (ViewBag.ErrorMg != null)
        {
            <div id="msgsAlert" style="margin-left: 3em;" class="alert alert-danger">
                @ViewBag.ErrorMg
            </div>
        }



    </div>
    <div>
        <form action="/Admin/Payment/Payment" method="post">
            <input class="form-control" width="200px" type="text" placeholder="Type Name" name="search">
            <button class="btn btn-dark" type="submit"><i class="fa-solid fa-magnifying-glass "></i></button>

        </form>
    </div>

    <div class="container _cartlisstdis">

        <table class="table">
            <thead>
            <th>Type</th>
            <th>Number Card</th>
            <th>CGV</th>
            <th>Expiration date</th>      
            <th>Edit</th>
            <th>Delete</th>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.type</td>
                        <td>@item.numbercard<td>
                        <td>@item.cgv</td>
                        <td>@item.expiration_date</td>

                        <td><a href="/Admin/Payment/Edit/@item.ID" class="btn btn-success">Edit</a></td>
                        <td><a href="/Admin/Payment/Delete/@item.ID" class="btn btn-danger">Delete</a></td>
                    </tr>
                }

            </tbody>
        </table>


    </div>
</div>

<script src="~/Areas/Admin/Content/Script/chart.js"></script>

<script>
    setTimeout(function () {
        $('#msgAlert').fadeOut('slow');
        $('#msgsAlert').fadeOut('slow');
    }, 2000);
</script>