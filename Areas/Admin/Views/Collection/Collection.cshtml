    <div class="row">
        <div class="col-md-6">
            <div class="chart_">
                <canvas id="order" height="400" width="600"></canvas>
            </div>
        </div>
        <div class="col-md-6">
            <div class="chart_">
                <canvas id="total" height="400" width="600"></canvas>
            </div>
        </div>
    </div>
