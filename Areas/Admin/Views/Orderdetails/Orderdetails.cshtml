                </div>
            </div>

        </div>



    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="chart_">
                <canvas id="order" height="400" width="600"></canvas>
            </div>
        </div>
        <div class="col-md-6">
            <div class="chart_">
                <canvas id="total" height="400" width="600"></canvas>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="chart_">
                <canvas id="profit" height="400" width="600"></canvas>
            </div>
        </div>
        <div class="col-md-6">
            <div class="chart_">
                <canvas id="country" height="400" width="600"></canvas>
            </div>
        </div>
    </div>
    <div class="row">
        @if (ViewBag.SuccessMg != null)
        {
            <div id="msgAlert" style="margin-left: 3em;" class="alert alert-success">
                @ViewBag.SuccessMg
            </div>
        }
        else if (ViewBag.ErrorMg != null)
        {
            <div id="msgsAlert" style="margin-left: 3em;" class="alert alert-danger">
                @ViewBag.ErrorMg
            </div>
        }
    </div>
    <div class="contain_insearch">
        <form action="/Admin/Orderdetails/Orderdetails" method="post">
            <input class="search_form" type="text" placeholder="Product Name" name="search">
            <button class="btn btn-dark" type="submit"><i class="fa-solid fa-magnifying-glass "></i></button>

        </form>
    </div>


    <div class="container _cartlisstdis">

        <table class="table">
            <thead>
            <th>ID</th>
            <th>Style</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Order</th>
            <th>Edit</th>
            <th>Delete</th>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ItemMst.ProdMst.Prod_Type</td>
                        <td>@item.UnitPrice
                        <td>
                        <td>@item.Quantity</td>
                        <td>@item.ID</td>
                        <td><a href="/Admin/Orderdetails/Edit/@item.Orderdetails_ID" class="btn btn-success">Edit</a></td>
                        <td><a href="/Admin/Orderdetails/Delete/@item.Orderdetails_ID" class="btn btn-danger">Delete</a></td>
                    </tr>
                }

            </tbody>
        </table>


    </div>
</div>

<script src="~/Areas/Admin/Content/Script/chart.js"></script>

<script>
    setTimeout(function () {
        $('#msgAlert').fadeOut('slow');
        $('#msgsAlert').fadeOut('slow');
    }, 2000);
</script>